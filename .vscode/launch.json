{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["app.main:app", "--reload"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH":"${workspaceFolder}"
            }
        }
    ]
}